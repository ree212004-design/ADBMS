ONLY ANGULAR IS DONE IN THIS 

GIVE CODE IN SQL

CREATE TABLE doctors (
  id NUMBER PRIMARY KEY,
  name VARCHAR2(50),
  specialization VARCHAR2(50),
  time VARCHAR2(20)
);

INSERT INTO doctors VALUES (1, 'Dr. Arun', 'Cardiologist', '10AM-2PM');
INSERT INTO doctors VALUES (2, 'Dr. Meena', 'Dentist', '3PM-6PM');
COMMIT;

CREATE TABLE appointments (
  id NUMBER PRIMARY KEY,
  patient_name VARCHAR2(50),
  doctor_name VARCHAR2(50),
  appointment_date DATE
);

CREATE SEQUENCE appointments_seq START WITH 1 INCREMENT BY 1 NOCACHE;




CREATE A FOLDER NAMED doctor_server IN DESKTOP
OPEN THE FOLDER
GIVE CMD IN PATH 

TYPE,
npm init -y
npm install express oracledb cors


THEN,
IN NOTEPAD CREATE server.js IN THE LOCATION DESKTOP IN THE doctor_server FOLDER


const express = require('express');
const oracledb = require('oracledb');
const cors = require('cors');

const app = express();
app.use(cors());
app.use(express.json());

const dbConfig = {
    user: 'system',
    password: 'your_password',
    connectString: 'localhost/XE'
};

// Get doctors
app.get('/doctors', async (req, res) => {
    const conn = await oracledb.getConnection(dbConfig);
    const result = await conn.execute(`SELECT * FROM doctors`);
    res.json(result.rows.map(r => ({
        ID: r[0],
        NAME: r[1],
        SPECIALIZATION: r[2],
        TIME: r[3]
    })));
    await conn.close();
});

// Get appointments
app.get('/appointments', async (req, res) => {
    const conn = await oracledb.getConnection(dbConfig);
    const result = await conn.execute(`SELECT * FROM appointments`);
    res.json(result.rows.map(r => ({
        ID: r[0],
        Patient_name: r[1],
        Doctor_name: r[2],
        Appointment_date: r[3]
    })));
    await conn.close();
});

// Book appointment
app.post('/appointments', async (req, res) => {
    const { patientName, doctorName, appointmentDate } = req.body;

    const conn = await oracledb.getConnection(dbConfig);
    await conn.execute(
        `INSERT INTO appointments 
         VALUES(appointments_seq.NEXTVAL, :p, :d, TO_DATE(:dt,'YYYY-MM-DD'))`,
        [patientName, doctorName, appointmentDate],
        { autoCommit: true }
    );
    await conn.close();

    res.send("Booked");
});

app.listen(3000, () => console.log("Server running on port 3000"));






